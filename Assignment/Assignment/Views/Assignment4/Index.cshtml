@model IEnumerable<BusinessLayer.Employee>

@{
    ViewBag.Title = "Assignment4-Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="employees container py-4">
    <h2 class="text-center mb-3">Employees</h2>
    <p>
        @Html.ActionLink(" Add New", "Create", "Assignment3", new { @class = "fa fa-plus fa-lg text-info float-right mb-3" })
    </p>
    <table class="table table-bordered text-center">
        <tr class="bg-dark text-white">
            <th>Name</th>
            <th>Gender</th>
            <th>City</th>
            <th>Date Of Birth</th>
            <th>Operations</th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Gender)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.City)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DateOfBirth)
                </td>
                <td>
                    @Html.ActionLink(" ", "Edit", "Assignment4", new { id = item.ID }, new { @class = "fa fa-edit text-primary mr-3" })
                    @Html.ActionLink(" ", "Delete", "Assignment4", new { id = item.ID }, new { onclick = "return confirm('Are you sure you want to delete?');" , @class = "fa fa-trash text-danger" })
                </td>
            </tr>
        }
    </table>
</div>

