@model IEnumerable<Assignment.Models.User>

@using Assignment.Models;

@{
    ViewBag.Title = "Assignment2-Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="details container py-5 mt-5 w-75 mx-auto">
    <h2 class="text-center mb-5">User Details</h2>
    <div class="mb-5">
        <div class="row bg-dark text-white text-center justify-content-center p-1">
            <div class="col-md-2 border-right">Id</div>
            <div class="col-md-4 border-right">Name</div>
            <div class="col-md-2 border-right">Dept Id</div>
            <div class="col-md-2 border-right">City</div>
            <div class="col-md-2">Gender</div>
        </div>
        @foreach (User user in @Model)
        {
            <div class="row justify-content-center text-center p-1 border">
                <div class="col-md-2 border-right">
                    @user.UserId
                </div>
                <div class="col-md-4 border-right">
                    @user.Name
                </div>
                <div class="col-md-2 border-right">
                    @user.DeptId
                </div>
                <div class="col-md-2 border-right">
                    @user.City
                </div>
                <div class="col-md-2">
                    @user.Gender
                </div>
            </div>
        }
    </div>
</div>
